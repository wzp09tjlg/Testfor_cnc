<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

   <TextView
       android:id="@+id/cnc_tv_id"
       android:layout_width="@dimen/dimen_200dp"
       android:layout_height="wrap_content"
       android:gravity="center"
       />

    <TextView
        android:id="@+id/cnc_tv_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cnc_tv_id"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/cnc_tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cnc_tv_body"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/cnc_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/cnc_tv_address"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/cnc_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cnc_tv_address"
        android:gravity="center"
        />

</RelativeLayout>
