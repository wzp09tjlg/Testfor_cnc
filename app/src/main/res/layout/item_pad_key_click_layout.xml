<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/cnc_img_pad_item"
        android:layout_width="@dimen/dimen_240dp"
        android:layout_height="@dimen/dimen_240dp"
        android:src="@drawable/pad_item_img_list"/>

    <TextView
        android:id="@+id/text_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="@dimen/dimen_42sp" />

    <TextView
        android:id="@+id/text_left"
        android:layout_width="@dimen/dimen_70dp"
        android:layout_height="@dimen/dimen_70dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="@dimen/dimen_42sp" />

    <TextView
        android:id="@+id/text_top"
        android:layout_width="@dimen/dimen_70dp"
        android:layout_height="@dimen/dimen_70dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="@dimen/dimen_42sp" />

    <TextView
        android:id="@+id/text_right"
        android:layout_width="@dimen/dimen_70dp"
        android:layout_height="@dimen/dimen_70dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="@dimen/dimen_42sp" />

    <TextView
        android:id="@+id/text_bottom"
        android:layout_width="@dimen/dimen_70dp"
        android:layout_height="@dimen/dimen_70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="@dimen/dimen_42sp" />
</RelativeLayout>
